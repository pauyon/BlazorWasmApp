@page "/accessory"
@page "/accessory/{EntityId:int}"
@inherits DetailsPageBase<Accessory, AccessoryHistory>

@if (Entity == null)
{
    <MudProgressCircular Indeterminate="true">Loading...</MudProgressCircular>
}
else
{
    <MudGrid>
        <MudItem xs="12" sm="4">
            <h3>Accessory Details</h3>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Make" @bind-Value="Entity.Make" For="@(() => Entity.Make)" />
                    <MudTextField Label="Model" @bind-Value="Entity.Model" For="@(() => Entity.Model)" />
                </MudCardContent>
                <MudCardActions>
                    <span class="ml-auto">
                        <MudButton OnClick="RedirectToGrid" Variant="Variant.Filled" Color="Color.Error">Cancel</MudButton>
                        <MudButton OnClick="Save" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
                    </span>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="8">
            <h3>History</h3>
            <MudCard>
                <MudDataGrid Items="@EntityHistories" Striped>
                    <Columns>
                        <PropertyColumn Property="x => x.Make" Title="Make" />
                        <PropertyColumn Property="x => x.Model" Title="Model" />
                    </Columns>
                </MudDataGrid>
            </MudCard>
        </MudItem>
    </MudGrid>
}