@page "/accessory"
@page "/accessory/{AccessoryId:int}"
@using BlazorWasmApp.Client.Services.AccessoryService
@using BlazorWasmApp.Shared.Domain.Entities
@using BlazorWasmApp.Shared.Domain.Models
@attribute [Authorize(Roles = "Administrator,User")]

@inject NavigationManager NavigationManager
@inject IAccessoryService AccessoryService

@if (_accessory == null)
{
    <MudProgressCircular Indeterminate="true">Loading...</MudProgressCircular>
}
else
{
    <MudGrid>
        <MudItem xs="12" sm="4">
            <h3>Accessory Details</h3>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Make" @bind-Value="_accessory.Make" For="@(() => _accessory.Make)" />
                    <MudTextField Label="Model" @bind-Value="_accessory.Model" For="@(() => _accessory.Model)" />
                </MudCardContent>
                <MudCardActions>
                    <span class="ml-auto">
                        <MudButton OnClick="RedirectToGrid" Variant="Variant.Filled" Color="Color.Error">Cancel</MudButton>
                        <MudButton OnClick="Save" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
                    </span>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="8">
            <h3>History</h3>
            <MudCard>
                <MudDataGrid Items="@_accessoryHistories" Striped>
                    <Columns>
                        <PropertyColumn Property="x => x.Make" Title="Make" />
                        <PropertyColumn Property="x => x.Model" Title="Model" />
                    </Columns>
                </MudDataGrid>
            </MudCard>
        </MudItem>
    </MudGrid>
}


@code {

    [Parameter]
    public int AccessoryId { get; set; }

    private Accessory? _accessory;
    private IEnumerable<AccessoryHistory>? _accessoryHistories;

    protected override async Task OnInitializedAsync()
    {
        if (AccessoryId != 0)
        {
            _accessory = await AccessoryService!.GetById(AccessoryId);
            _accessoryHistories = await AccessoryService!.GetByIdTemporal(AccessoryId);
        }
        else
        {
            _accessory = new();
        }
    }

    protected async Task Save()
    {
        if (AccessoryId == 0)
        {
            await AccessoryService.Add(_accessory);
        }
        else
        {
            await AccessoryService.Update(_accessory);
        }

        NavigationManager.NavigateTo("/accessories");
    }

    protected void RedirectToGrid()
    {
        NavigationManager.NavigateTo("/accessories");
    }
}
