@page "/accessories"
@inherits GridPageBase<Accessory, AccessoryHistory>

<PageTitle>Accessories</PageTitle>

<MudText Typo="Typo.h3">Accessories</MudText>

@if (Entities == null)
{
    <MudProgressCircular Indeterminate="true">Loading...</MudProgressCircular>
}
else
{
    <MudButton OnClick="@(() => AddEditRecord(null))" Variant="@Variant.Filled" Color="@Color.Success">Add</MudButton>

    <MudDataGrid Items="@Entities" Striped>
        <Columns>
            <PropertyColumn Property="x => x.Make" Title="Make" />
            <PropertyColumn Property="x => x.Model" Title="Model" />
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudStack Row>
                        <MudButton OnClick="@(() => AddEditRecord(context.Item))" Variant="@Variant.Filled" Color="@Color.Primary">Edit</MudButton>
                        <MudButton OnClick="@(() => DeleteRecord(context.Item))" Variant="@Variant.Filled" Color="@Color.Error">Delete</MudButton>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
}